@{
    ViewData["Title"] = "Add Employee";
}

@section Scripts {

    <!-- page specific plugin scripts -->
    <link href="~/assets/DataTable/jquery.dataTables.css" rel="stylesheet" />
    <link href="~/assets/DataTable/buttons.dataTables.min.css" rel="stylesheet" />
    @*<script type="text/javascript" src="~/assets/DataTable/JS-1.12.4.js"></script>*@
    <link href="~/assets/css/Loader.css" rel="stylesheet" asp-append-version="true" />
    <script type="text/javascript" src="~/assets/DataTable/DataTableSearch.js"></script>
    <script type="text/javascript" src="~/assets/DataTable/jquery.dataTables.min_1.12.1.js"></script>
    <script type="text/javascript" src="~/assets/DataTable/jszip.min_3.1.3.js"></script>
    <script type="text/javascript" src="~/assets/DataTable/dataTables.buttons.min_2.2.3.js"></script>
    <script type="text/javascript" src="~/assets/DataTable/pdfmake.min_0.1.53.js"></script>
    <script type="text/javascript" src="~/assets/DataTable/vfs_fonts_0.1.53.js"></script>
    <script type="text/javascript" src="~/assets/DataTable/buttons.html5.min_2.2.3.js"></script>
    <script type="text/javascript" src="~/assets/DataTable/dataTables.colReorder.min.js"></script>
    <script type="text/javascript" src="~/assets/DataTable/buttons.print.min_2.2.3.js"></script>
    <script type="text/javascript" src="~/assets/DataTable/ColVis.js"></script>
    <script type="text/javascript" src="~/assets/DataTable/SelectedRow.js"></script>
    <script src="~/assets/DataTable/DataTableFixedColumn.js"></script>
    <script src="~/assets/DataTable/DataTableRowGroup.js"></script>

    <!-- ace scripts -->
    <script src="~/assets/js/ace-elements.min.js"></script>
    <script src="~/assets/js/ace.min.js"></script>

    <script src="~/assets/ViewScripts/AddEmp/AddEmp.js" asp-append-version="true"></script>

}

<div class="row">
    <div class="col-xs-12 col-md-12 col-sm-12">
        <div class="table-header">
            Employee Details
        </div>

        <div class="col-xs-12 col-md-12 col-sm-12">
            <div id="DivEmpAlert" style="margin-bottom:2vh;margin-top:2vh;">
                <span id="AlertEmpMsg"></span>
                <button id="btnHideEmpAlert" type="button" class="close">
                    <i class="ace-icon fa fa-times"></i>
                </button>
            </div>
        </div>


        <div id="divLoding" class="col-xs-12 align-center hide">
            <div class="loader">
                <span class="l">L</span>
                <span class="o">o</span>
                <span class="a">a</span>
                <span class="d">d</span>
                <span class="i">i</span>
                <span class="n">n</span>
                <span class="g">g</span>
                <span class="d1">.</span>
                <span class="d2">.</span>
                <span class="d3">.</span>
            </div>
        </div>

        <div style="margin-top: 2vh;margin-bottom:5vh;">
            <table id="tblEmpList" class="table table-striped table-bordered table-hover" cellspacing="1" width="100%" align="center" style="white-space:nowrap;overflow-x:scroll;" border="0">
                <tbody>
                </tbody>
            </table>
        </div>
    </div>


    <div class="col-xs-12 col-md-12 col-sm-12">
        <div class="widget-box">
            <div class="widget-header">
                <h4 class="widget-title">Add OPD</h4>
                <span class="widget-toolbar">
                    <a href="#" data-action="collapse">
                        <i class="ace-icon fa fa-chevron-up"></i>
                    </a>
                </span>
            </div>

            <div class="widget-body">
                <div class="widget-main">
                    <div class="row">
                        <div class="col-xs-12 col-md-12 col-sm-12">
                            <input type="hidden" id="txtEmpCode">
                            <div class="col-xs-12 col-md-4 col-sm-12">
                                <label>
                                    Employee Name <span class="red">*</span>
                                </label>
                                <input class="form-control" type="text" id="txtEmpName">
                            </div>

                            <div class="col-xs-12 col-md-4 col-sm-12">
                                <label>
                                    D.O.B. <span class="red">*</span>
                                </label>
                                <input class="form-control" type="date" id="txtDOB">
                            </div>

                            <div class="col-xs-12 col-md-4 col-sm-12">
                                <label>
                                    Gender <span class="red">*</span>
                                </label>

                                <div>
                                    <select id="ddlGender" class="form-control">
                                        <option value="Male">Male</option>
                                        <option value="Female">Female</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="space-4"></div>

                    <div class="row">
                        <div class="col-xs-12 col-md-12 col-sm-12">
                            <div class="col-xs-12 col-md-4 col-sm-12">
                                <label>
                                    Department <span class="red">*</span>
                                </label>
                                <input class="form-control" type="text" id="txtDepartment">
                            </div>

                            <div class="col-xs-12 col-md-4 col-sm-12">
                                <label>
                                    Designation <span class="red">*</span>
                                </label>
                                <input class="form-control" type="text" id="txtDesignation">
                            </div>


                            <div class="col-xs-12 col-md-4 col-sm-12">
                                <label>
                                    Basic Salary <span class="red">*</span>
                                </label>
                                <input class="form-control" type="number" id="txtBasicSalary">
                            </div>
                        </div>
                    </div>

                    <div class="space-4"></div>

                    <div class="space-4"></div>

                    <div class="row">
                        <div class="col-xs-12 col-md-12 col-sm-12">
                            <div class="col-md-12 align-right">
                                <button id="btnResetEmp" class="btn" type="reset">
                                    <i class="ace-icon fa fa-undo"></i>
                                    Reset
                                </button>
                                <button id="btnSaveEmp" class="btn btn-info" type="button">
                                    <i class="ace-icon fa fa-check"></i>
                                    Submit
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
